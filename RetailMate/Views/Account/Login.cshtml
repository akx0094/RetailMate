@{
    ViewData["Title"] = "Login";
    Layout = null; // Set to null if you don't have a shared layout yet, or specify your layout like "_Layout"

    // The ModelState.Clear() call has been moved to the AccountController's Login (HttpGet) action.
    // Removing it from here resolves the CS0103 error.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - RetailMate</title>
    <!-- Link to your existing style.css if you want to reuse its styles -->
    <link rel="stylesheet" href="~/css/style.css" />
    <!-- Or use a minimal set of styles for the login page -->
    <style>
        body {
            background: url('/images/img/backg.jpg') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Roboto', sans-serif;
            color: #fff;
        }

        .login-container {
            background: rgba(0, 0, 0, 0.7); /* Semi-transparent black */
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
            text-align: center;
            width: 100%;
            max-width: 400px;
            box-sizing: border-box;
        }

            .login-container h2 {
                color: #e1f207; /* Accent yellow */
                margin-bottom: 30px;
                font-size: 2.8rem;
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-size: 1.6rem;
                color: #ccc;
            }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #555;
            border-radius: 5px;
            background-color: #333;
            color: #fff;
            font-size: 1.6rem;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: #0072ff; /* Primary blue on focus */
                box-shadow: 0 0 0 3px rgba(0, 114, 255, 0.3);
            }

        .btn-login {
            background-color: #0072ff; /* Primary blue */
            color: #fff;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.8rem;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #b90505; /* Red on hover */
            }

        .validation-summary-errors ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .validation-summary-errors li {
            color: #ff4d4d; /* Red for errors */
            font-size: 1.4rem;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login to RetailMate</h2>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="validation-summary-errors"></div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <button type="submit" class="btn-login">Login</button>
        </form>
    </div>
</body>
</html>
